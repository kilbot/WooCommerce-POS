<div class="numpad">
  <div class="numpad-header">
    <strong class="title">{{label}}</strong>

    {{#is numpad 'price|cash'}}

    <div class="input-group">
      <span class="input-group-addon">{{{currency.symbol}}}</span>
      <input type="text" name="{{name}}" class="form-control autogrow">
    </div>

    {{/is}}

    {{#is numpad 'discount'}}

    <div class="input-group input-toggle">
      <span class="input-group-btn"><a href="#" data-modifier="value">{{{currency.symbol}}}</a></span>
      <input type="text" name="{{name}}" class="form-control autogrow">
      <input type="text" name="percentage" class="form-control autogrow">
      <span class="input-group-btn"><a href="#" data-modifier="percentage">%</a></span>
    </div>

    {{/is}}

    {{#is numpad 'quantity'}}

    <div class="input-group">
      <span class="input-group-btn"><a href="#" data-modifier="decrease"><i class="icon icon-minus"></i></a></span>
      <input type="text" name="{{name}}" class="form-control autogrow">
      <span class="input-group-btn"><a href="#" data-modifier="increase"><i class="icon icon-plus"></i></a></span>
    </div>

    {{/is}}

    </div>

    <div class="numpad-keys">
      <div class="keys common">
        <div class="row">
          <a href="#" data-key="1" class="btn">1</a>
          <a href="#" data-key="2" class="btn">2</a>
          <a href="#" data-key="3" class="btn">3</a>
        </div>
        <div class="row">
          <a href="#" data-key="4" class="btn">4</a>
          <a href="#" data-key="5" class="btn">5</a>
          <a href="#" data-key="6" class="btn">6</a>
        </div>
        <div class="row">
          <a href="#" data-key="7" class="btn">7</a>
          <a href="#" data-key="8" class="btn">8</a>
          <a href="#" data-key="9" class="btn">9</a>
        </div>
        <div class="row">
          <a href="#" data-key="0" class="btn">0</a>
          <a href="#" data-key="00" class="btn">00</a>
          <a href="#" data-key="." class="btn decimal">{{{currency.decimal}}}</a>
        </div>
      </div>
      <div class="keys common extra-keys">
        <a href="#" data-key="del" class="btn"><i class="icon icon-delete"><span>del</span></i></a>
        <a href="#" data-key="+/-" class="btn">+/-</a>
        <a href="#" data-key="ret" class="btn return">{{buttons.return}}</a>
      </div>

      {{#is numpad 'discount'}}

      {{#if discount_keys}}
      <div class="keys extra-keys discount">
        {{#each discount_keys}}
        <a href="#" data-key="{{this}}" class="btn">{{this}}%</a>
        {{/each}}
      </div>
      {{/if}}

      {{/is}}

      {{#is numpad 'cash'}}

      {{#if quick_keys}}
      <div class="keys extra-keys cash">
        {{#each quick_keys}}
            <a href="#" data-key="{{this}}" class="btn">{{{number this}}}</a>
        {{/each}}
      </div>
      {{/if}}

      {{/is}}

  </div>
</div>